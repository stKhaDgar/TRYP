<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="windowActionBarOverlay">true</item>
        <item name="android:windowActionBarOverlay">true</item>

    </style>

    <style name="Title" parent="android:TextAppearance">
        <item name="android:textSize">@dimen/title_text_size</item>
        <item name="android:textColor">@color/black</item>
        <item name="fontPath">fonts/OpenSans-Regular.ttf</item>
    </style>

    <style name="AppTheme.RatingBar" parent="Widget.AppCompat.RatingBar.Small">
        <item name="android:progressDrawable">@drawable/rating_bar</item>
        <item name="android:minHeight">34dp</item>
        <item name="android:maxHeight">34dp</item>
        <item name="android:isIndicator">false</item>
    </style>

	<style name="AppTheme.TextInputLayout" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox.Dense">
		<item name="boxStrokeColor">#E0E0E0</item>
	</style>

    <style name="TextAppearance.Tabs" parent="TextAppearance.MaterialComponents.Tab">
        <item name="textAllCaps">false</item>
        <item name="android:fontFamily">@font/opensans_bold</item>
    </style>

</resources>
