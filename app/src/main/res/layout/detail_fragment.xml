<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_gravity="center"
    android:layout_height="wrap_content"
    android:layout_width="match_parent">

    <androidx.cardview.widget.CardView
        android:layout_width="218dp"
		android:layout_marginTop="8dp"
		android:layout_marginBottom="8dp"
        android:layout_height="wrap_content"
        android:layout_gravity="end"
		android:layout_centerHorizontal="true"
        app:cardCornerRadius="8dp"
        app:cardElevation="4dp">

        <RelativeLayout
            android:id="@+id/all_content_relative_layout"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageView
                android:id="@+id/user_iv"
                android:layout_width="match_parent"
                android:layout_height="300dp"
                android:layout_alignParentTop="true"
                android:scaleType="centerCrop"
                android:src="@drawable/person_big"
                android:contentDescription="@string/content_description" />

            <androidx.cardview.widget.CardView
                android:id="@+id/content_move_card"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="280dp"
                app:cardCornerRadius="6dp"
                app:cardElevation="5dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="10dp"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <TextView
                            android:id="@+id/name_tv"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="24dp"
                            android:layout_marginTop="10dp"
                            android:text="Jack"
                            android:textColor="#000"
                            android:textSize="18sp"
							android:layout_weight="1"
                            app:layout_constraintEnd_toStartOf="@+id/imageViewHeart"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toTopOf="parent" />

                        <ImageView
                            android:id="@+id/imageViewHeart"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginEnd="16dp"
							android:layout_gravity=""
                            android:layout_marginTop="16dp"
                            android:src="@drawable/ic_like"
							android:contentDescription="@string/content_description" />

                    </LinearLayout>

                    <TextView
                        android:id="@+id/category_tv"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="24dp"
                        android:layout_marginTop="10dp"
                        android:text="@string/tryp_prime"
                        android:textColor="#000"
                        android:textSize="12dp"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/car_type"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="24dp"
                        android:text="Audi A8 2017"
                        android:textColor="#979797" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="3dp"
                        android:layout_marginTop="10dp"
                        android:layout_marginBottom="17dp">

                        <ImageView
                            android:id="@+id/imageView2"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="21dp"
                            android:paddingTop="2dp"
                            android:scaleType="centerInside"
                            android:src="@drawable/ic_person"
							android:contentDescription="@string/content_description" />

                        <TextView
                            android:id="@+id/num_of_passangers"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="4dp"
                            android:text="5"
                            android:textColor="#000"
                            android:textSize="14sp" />

                        <ImageView
                            android:id="@+id/imageView3"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="21dp"
                            android:paddingTop="2dp"
                            android:scaleType="centerInside"
                            android:src="@drawable/ic_suitcase"
							android:contentDescription="@string/content_description" />

                        <TextView
                            android:id="@+id/num_of_baggage"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="4dp"
                            android:text="2"
                            android:textColor="#000"
                            android:textSize="14sp" />

                        <ImageView
                            android:id="@+id/num_of_door"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="21dp"
                            android:paddingTop="2dp"
                            android:scaleType="centerInside"
                            android:src="@drawable/ic_num_of_door"
							android:contentDescription="@string/content_description" />

                        <TextView
                            android:id="@+id/num_of_door_tv"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="4dp"
                            android:text="4/4"
                            android:textColor="#000"
                            android:textSize="14sp" />

                    </LinearLayout>

                </LinearLayout>

            </androidx.cardview.widget.CardView>

            <LinearLayout
                android:id="@+id/constraintLayout2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="248dp"
                android:orientation="vertical">

                <androidx.cardview.widget.CardView
                    android:id="@+id/image_card"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="16dp"
                    android:layout_marginTop="36dp"
                    android:layout_marginEnd="16dp"
                    app:cardCornerRadius="8dp">

                    <ImageView
                        android:id="@+id/car_iv"
                        android:layout_width="200dp"
                        android:layout_height="130dp"
                        android:scaleType="fitCenter"
                        android:src="@drawable/car_big"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent"
						android:contentDescription="@string/content_description" />

                </androidx.cardview.widget.CardView>

                <TextView
                    android:id="@+id/price_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginTop="12dp"
                    android:text="$54"
                    android:textColor="#000"
                    android:textSize="36sp" />

                <androidx.cardview.widget.CardView
                    android:id="@+id/tryp_now_btn"
                    android:layout_width="168dp"
                    android:layout_height="56dp"
                    android:layout_gravity="center"
                    android:layout_marginTop="9dp"
                    android:layout_marginBottom="32dp"
                    android:clickable="true"
					android:focusable="true"
                    app:cardBackgroundColor="@color/trip_accent_color"
                    app:cardCornerRadius="24dp"
                    app:cardElevation="8dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:text="@string/tryp_now"
                        android:textAllCaps="false"
                        android:textColor="#FFF"
                        android:textSize="18sp" />

                </androidx.cardview.widget.CardView>

            </LinearLayout>

        </RelativeLayout>

    </androidx.cardview.widget.CardView>

</RelativeLayout>