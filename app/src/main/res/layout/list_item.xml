<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:app="http://schemas.android.com/apk/res-auto"
	android:layout_width="match_parent"
	android:layout_height="wrap_content">

	<androidx.cardview.widget.CardView
		android:id="@+id/cardView"
		android:layout_width="match_parent"
		android:layout_height="140dp"
		android:layout_marginStart="16dp"
		android:layout_marginBottom="8dp"
		android:layout_marginEnd="16dp"
		android:layout_marginTop="2dp"
		app:cardCornerRadius="8dp"
		app:cardElevation="4dp"
		app:layout_constraintTop_toTopOf="parent"
		app:layout_constraintStart_toStartOf="parent"
		app:layout_constraintEnd_toEndOf="parent"
		app:layout_constraintBottom_toBottomOf="parent" />

	<androidx.constraintlayout.widget.ConstraintLayout
		android:id="@+id/main_layout"
		android:layout_width="match_parent"
		android:layout_height="140dp"
		android:layout_marginStart="16dp"
		android:layout_marginBottom="8dp"
		android:layout_marginEnd="16dp"
		android:layout_marginTop="2dp"
		android:elevation="5dp"
		app:layout_constraintTop_toTopOf="parent"
		app:layout_constraintStart_toStartOf="parent"
		app:layout_constraintEnd_toEndOf="parent"
		app:layout_constraintBottom_toBottomOf="parent">

		<LinearLayout
			android:id="@+id/linearLayout"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:layout_marginStart="4dp"
			android:layout_marginTop="8dp"
			android:paddingStart="8dp"
			android:paddingEnd="8dp"
			android:orientation="vertical"
			app:layout_constraintStart_toStartOf="parent"
			app:layout_constraintTop_toTopOf="parent">

			<de.hdodenhof.circleimageview.CircleImageView
				android:id="@+id/avatar_imageview"
				android:layout_width="56dp"
				android:layout_height="56dp"
				android:layout_marginStart="6dp"
				android:layout_marginEnd="6dp" />

			<TextView
				android:id="@+id/client_name_textView"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:layout_gravity="center_horizontal"
				android:layout_marginTop="6dp"
				android:fontFamily="@font/opensans_bold"
				android:text="Clint"
				android:textAlignment="center"
				android:textColor="@color/black"
				android:textSize="12sp" />

		</LinearLayout>

		<LinearLayout
			android:id="@+id/addressLayout"
			android:layout_width="0dp"
			android:layout_height="wrap_content"
			android:orientation="vertical"
			android:layout_marginStart="4dp"
			android:layout_marginEnd="8dp"
			app:layout_constraintBottom_toBottomOf="@id/linearLayout"
			app:layout_constraintStart_toEndOf="@id/linearLayout"
			app:layout_constraintEnd_toEndOf="parent"
			app:layout_constraintTop_toTopOf="@id/linearLayout">

			<LinearLayout
				android:layout_width="match_parent"
				android:layout_height="wrap_content"
				android:orientation="horizontal"
				android:gravity="center">

				<ImageView
					android:id="@+id/start_icon_imageView"
					android:layout_width="20dp"
					android:layout_height="14dp"
					app:layout_constraintBottom_toBottomOf="@id/from_textView"
					app:layout_constraintStart_toEndOf="@+id/linearLayout"
					android:src="@drawable/ic_vector"
					android:contentDescription="@string/content_description" />

				<TextView
					android:id="@+id/from_textView"
					android:layout_width="0dp"
					android:layout_height="wrap_content"
					android:layout_weight="1"
					android:layout_marginStart="8dp"
					android:ellipsize="end"
					android:fontFamily="@font/opensans_regular"
					android:maxLines="1"
					android:text="asd"
					android:textColor="#828282"
					android:textSize="13sp"
					app:layout_constraintEnd_toEndOf="parent"
					app:layout_constraintStart_toEndOf="@+id/start_icon_imageView"
					app:layout_constraintTop_toTopOf="parent" />

			</LinearLayout>

			<LinearLayout
				android:layout_width="match_parent"
				android:layout_height="wrap_content"
				android:orientation="horizontal"
				android:gravity="center_vertical">

				<View
					android:layout_width="30dp"
					android:layout_height="30dp"
					android:translationX="-5dp"
					android:layerType="software"
					android:layout_marginTop="2dp"
					android:background="@drawable/stroke_distance"/>

				<TextView
					android:id="@+id/tvDistance"
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:fontFamily="@font/opensans_regular"
					android:textSize="10sp"
					android:textColor="@color/colorAccent"
					android:translationX="-12dp"/>

			</LinearLayout>

			<LinearLayout
				android:layout_width="match_parent"
				android:layout_height="wrap_content"
				android:orientation="horizontal"
				android:gravity="center">

				<ImageView
					android:id="@+id/end_icon_imageView"
					android:layout_width="20dp"
					android:layout_height="14dp"
					android:tint="@color/black"
					app:layout_constraintStart_toEndOf="@+id/linearLayout"
					app:layout_constraintTop_toTopOf="@id/to_textView"
					app:layout_constraintBottom_toBottomOf="@id/to_textView"
					android:src="@drawable/ic_home"
					android:contentDescription="@string/content_description" />

				<TextView
					android:id="@+id/to_textView"
					android:layout_width="0dp"
					android:layout_height="wrap_content"
					android:layout_weight="1"
					android:layout_marginStart="8dp"
					android:ellipsize="end"
					android:fontFamily="@font/opensans_regular"
					android:maxLines="1"
					android:textColor="#828282"
					android:textSize="13sp"
					app:layout_constraintEnd_toEndOf="parent"
					app:layout_constraintStart_toEndOf="@+id/end_icon_imageView"
					app:layout_constraintTop_toBottomOf="@+id/from_textView" />

			</LinearLayout>

		</LinearLayout>

		<com.google.android.material.button.MaterialButton
			android:id="@+id/date_button"
			style="@style/Widget.MaterialComponents.Button.OutlinedButton"
			android:layout_width="150dp"
			android:layout_height="wrap_content"
			android:fontFamily="@font/opensans_regular"
			android:textAppearance="@style/AppTheme"
			android:text="21 Jun at 5:30 PM"
			android:textAllCaps="false"
			android:textColor="#333333"
			android:textSize="12sp"
			app:layout_constraintStart_toEndOf="@+id/linearLayout"
			app:layout_constraintTop_toBottomOf="@+id/linearLayout" />

		<TextView
			android:id="@+id/tvPrice"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:text="38.40$"
			android:textColor="@color/confirmed"
			android:fontFamily="@font/opensans_bold"
			app:layout_constraintEnd_toEndOf="parent"
			app:layout_constraintStart_toEndOf="@+id/date_button"
			app:layout_constraintTop_toTopOf="@+id/date_button"
			app:layout_constraintBottom_toTopOf="@id/status_textView" />

		<TextView
			android:id="@+id/status_textView"
			android:layout_width="123dp"
			android:layout_height="wrap_content"
			android:layout_marginStart="8dp"
			android:layout_marginEnd="8dp"
			android:fontFamily="@font/opensans_bold"
			android:text="Confirmed"
			android:layout_marginBottom="8dp"
			android:textAlignment="center"
			android:textColor="@color/confirmed"
			android:textSize="14sp"
			app:layout_constraintEnd_toEndOf="parent"
			app:layout_constraintStart_toEndOf="@+id/date_button"
			app:layout_constraintTop_toBottomOf="@id/tvPrice"
			app:layout_constraintBottom_toBottomOf="@id/date_button"/>

	</androidx.constraintlayout.widget.ConstraintLayout>

</androidx.constraintlayout.widget.ConstraintLayout>
