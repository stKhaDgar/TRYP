<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:app="http://schemas.android.com/apk/res-auto"
	android:layout_width="match_parent"
	android:layout_height="wrap_content">

	<androidx.cardview.widget.CardView
		android:id="@+id/cardView"
		android:layout_width="match_parent"
		android:layout_height="120dp"
		android:layout_marginStart="16dp"
		android:layout_marginBottom="8dp"
		android:layout_marginEnd="16dp"
		app:layout_goneMarginStart="16dp"
		android:layout_marginTop="2dp"
		app:cardCornerRadius="8dp"
		app:cardElevation="4dp">

		<androidx.constraintlayout.widget.ConstraintLayout
			android:layout_width="match_parent"
			android:layout_height="match_parent">

			<LinearLayout
				android:id="@+id/linearLayout"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:layout_marginStart="4dp"
				android:layout_marginTop="16dp"
				android:paddingStart="8dp"
				android:paddingEnd="8dp"
				android:orientation="vertical"
				app:layout_constraintStart_toStartOf="parent"
				app:layout_constraintTop_toTopOf="parent">

				<de.hdodenhof.circleimageview.CircleImageView
					android:id="@+id/avatar_imageview"
					android:layout_width="56dp"
					android:layout_height="56dp"
					android:layout_marginStart="6dp"
					android:layout_marginEnd="6dp" />

				<TextView
					android:id="@+id/client_name_textView"
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:layout_gravity="center_horizontal"
					android:layout_marginTop="6dp"
					android:fontFamily="@font/opensans_bold"
					android:text="Clint"
					android:textAlignment="center"
					android:textColor="@color/black"
					android:textSize="12sp" />

			</LinearLayout>

			<ImageView
				android:id="@+id/start_icon_imageView"
				android:layout_width="11dp"
				android:layout_height="18dp"
				android:layout_marginStart="10dp"
				app:layout_constraintStart_toEndOf="@+id/linearLayout"
				app:layout_constraintTop_toTopOf="@id/from_textView"
				app:layout_constraintBottom_toBottomOf="@id/from_textView"
				android:src="@drawable/ic_vector" />

			<TextView
				android:id="@+id/from_textView"
				android:layout_width="0dp"
				android:layout_height="wrap_content"
				android:layout_marginStart="9dp"
				android:layout_marginTop="16dp"
				android:layout_marginEnd="8dp"
				android:fontFamily="@font/opensans_regular"
				android:textColor="#828282"
				android:textSize="13sp"
				android:maxLines="1"
				android:ellipsize="end"
				app:layout_constraintEnd_toEndOf="parent"
				app:layout_constraintStart_toEndOf="@+id/start_icon_imageView"
				app:layout_constraintTop_toTopOf="parent" />

			<ImageView
				android:id="@+id/end_icon_imageView"
				android:layout_width="17dp"
				android:layout_height="14dp"
				android:layout_marginStart="7dp"
				android:tint="@color/black"
				app:layout_constraintStart_toEndOf="@+id/linearLayout"
				app:layout_constraintTop_toTopOf="@id/to_textView"
				app:layout_constraintBottom_toBottomOf="@id/to_textView"
				android:src="@drawable/ic_home"
				android:contentDescription="@string/content_description" />

			<TextView
				android:id="@+id/to_textView"
				android:layout_width="0dp"
				android:layout_height="wrap_content"
				android:layout_marginStart="6dp"
				android:layout_marginTop="14dp"
				android:fontFamily="@font/opensans_regular"
				android:textColor="#828282"
				android:textSize="13sp"
				android:maxLines="1"
				android:ellipsize="end"
				app:layout_constraintEnd_toEndOf="parent"
				app:layout_constraintStart_toEndOf="@+id/end_icon_imageView"
				app:layout_constraintTop_toBottomOf="@+id/from_textView" />

			<com.google.android.material.button.MaterialButton
				android:id="@+id/date_button"
				style="@style/Widget.MaterialComponents.Button.OutlinedButton"
				android:layout_width="150dp"
				android:layout_height="wrap_content"
				android:layout_marginTop="4dp"
				android:fontFamily="@font/opensans_regular"
				android:textAppearance="@style/AppTheme"
				android:text="21 Jun at 5:30 PM"
				android:textAllCaps="false"
				android:textColor="#333333"
				android:textSize="12sp"
				app:layout_constraintStart_toEndOf="@+id/linearLayout"
				app:layout_constraintTop_toBottomOf="@+id/to_textView" />

			<TextView
				android:id="@+id/status_textView"
				android:layout_width="123dp"
				android:layout_height="wrap_content"
				android:layout_marginStart="8dp"
				android:layout_marginEnd="8dp"
				android:fontFamily="@font/opensans_bold"
				android:text="Confirmed"
				android:textAlignment="center"
				android:textColor="#2CD05F"
				android:textSize="14sp"
				app:layout_constraintEnd_toEndOf="parent"
				app:layout_constraintStart_toEndOf="@+id/date_button"
				app:layout_constraintTop_toTopOf="@+id/date_button"
				app:layout_constraintBottom_toBottomOf="@id/date_button"/>

		</androidx.constraintlayout.widget.ConstraintLayout>

	</androidx.cardview.widget.CardView>

</LinearLayout>
