<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
    android:background="@color/white">

    <TextView
        android:id="@+id/title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/title_margin_side"
        android:layout_marginRight="@dimen/title_margin_side"
        android:layout_marginTop="@dimen/title_margin_top"
        android:gravity="center"
        android:textAppearance="@style/Title"
        android:text="@string/Notifications"/>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/notifications_container"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/title"
        android:layout_above="@id/backButton"
        android:layout_marginTop="@dimen/notifications_container_margin_top"
        android:layout_marginBottom="@dimen/notifications_container_margin_bottom"/>

    <include layout="@layout/part_back_button"/>

</RelativeLayout>